<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textColor="#673AB7"
        android:textSize="56sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <EditText
        android:id="@+id/resultEdit"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textColor="#673AB7"
        android:textSize="56sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultText"/>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:text="C"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/resultEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:onClick="btnClearClick"/>

    <Button
        android:id="@+id/btnDel"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#673AB7"
        android:text="DEL"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btnClear"
        app:layout_constraintTop_toBottomOf="@+id/resultEdit" />

    <Button
        android:id="@+id/btn07"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:text="7"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btnClear"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:onClick="btn07Click"/>

    <Button
        android:id="@+id/btn08"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:text="8"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btnClear"
        app:layout_constraintLeft_toRightOf="@+id/btn07"
        android:layout_marginLeft="5dp"
        android:onClick="btn08Click"/>

    <Button
        android:id="@+id/btn09"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:text="9"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btnDel"
        app:layout_constraintLeft_toRightOf="@+id/btn08"
        android:layout_marginLeft="5dp"
        android:onClick="btn09Click"/>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:text="+"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btnDel"
        app:layout_constraintLeft_toRightOf="@+id/btn09"
        android:layout_marginLeft="5dp"
        android:onClick="btnAddClick"/>

    <Button
        android:id="@+id/btn04"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:text="4"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btn07"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:onClick="btn04Click"/>

    <Button
        android:id="@+id/btn05"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:text="5"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btn08"
        app:layout_constraintLeft_toRightOf="@+id/btn04"
        android:layout_marginLeft="5dp"
        android:onClick="btn05Click"/>

    <Button
        android:id="@+id/btn06"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:text="6"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btn09"
        app:layout_constraintLeft_toRightOf="@+id/btn05"
        android:layout_marginLeft="5dp"
        android:onClick="btn06Click"/>

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:text="-"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btnAdd"
        app:layout_constraintLeft_toRightOf="@+id/btn09"
        android:layout_marginLeft="5dp"
        android:onClick="btnMinusClick"/>

    <Button
        android:id="@+id/btn01"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:text="1"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btn04"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:onClick="btn01Click"/>

    <Button
        android:id="@+id/btn02"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:text="2"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btn05"
        app:layout_constraintLeft_toRightOf="@+id/btn01"
        android:layout_marginLeft="5dp"
        android:onClick="btn02Click"/>

    <Button
        android:id="@+id/btn03"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:text="3"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btn06"
        app:layout_constraintLeft_toRightOf="@id/btn02"
        android:layout_marginLeft="5dp"
        android:onClick="btn03Click"/>

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:text="/"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btn04"
        app:layout_constraintLeft_toRightOf="@id/btn03"
        android:layout_marginLeft="5dp"
        android:onClick="btnDivideClick"/>
    <Button
        android:id="@+id/btnDot"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:text="."
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btn01"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:onClick="btnDotClick"/>
    <Button
        android:id="@+id/btn00"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:onClick="btn00Click"
        app:layout_constraintTop_toBottomOf="@+id/btn02"
        app:layout_constraintLeft_toRightOf="@id/btnDot"
        android:layout_marginLeft="5dp"/>
    <Button
        android:id="@+id/btnResult"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:text="="
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btn03"
        app:layout_constraintLeft_toRightOf="@id/btn00"
        android:layout_marginLeft="5dp"
        android:onClick="btnResultClick"/>
    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:text="*"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btnDivide"
        app:layout_constraintLeft_toRightOf="@id/btnResult"
        android:layout_marginLeft="5dp"
        android:onClick="btnMultiplyClick"/>

</androidx.constraintlayout.widget.ConstraintLayout>